{% extends 'base.html.twig' %} {% block title %}Platforme!{% endblock %} {% block body %}
<style>
    #login {
        display: flex;
        margin-right: auto;
        justify-content: center !important;
        margin-left: 17%;
        margin-top: 7em;
        border-radius: 20px;
        width: 70%;
        box-shadow: 6px 3px 17px 2px rgba(0, 0, 0, 0.54);
        -webkit-box-shadow: 6px 3px 17px 2px rgba(0, 0, 0, 0.54);
        -moz-box-shadow: 6px 3px 17px 2px rgba(0, 0, 0, 0.54);
    }
    
    .login-user {
        width: 55%;
        padding-top: 3%;
        border-bottom-right-radius: 20px;
        border-top-right-radius: 20px;
        text-align: center;
    }
    
    .login-user label {
        display: block;
        margin-left: -10em;
    }
    
    .login-user input {
        margin-top: 10px;
        width: 50%;
        padding: 12px;
        color: rgba(0, 0, 0, 0.6);
        outline: none;
        font-weight: 600;
    }
    
    .login-user input[type=text] {
        margin-bottom: 15px;
    }
    
    .login-user input:focus {
        font-weight: 600;
        color: rgba(0, 0, 0, 0.6);
    }
    
    .login-user input:hover {}
    
    .login-user img {
        width: 20%;
        height: auto;
    }
    
    .login-user h1 {
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 700;
    }
    
    .login-other {
        width: 45%;
        /*background: rgba(255, 255, 0, 0.5) url('{{asset('images/bg.jpg')}}')!important;*/
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
        url("{{asset('images/bg.jpg')}}");
        border-top-left-radius: 20px;
        border-bottom-left-radius: 20px;
        background-size: cover;
        background-position: center;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        color: #fff;
    }
    
    .icon {
        padding: 10px;
        background: rgba(0, 0, 0, 0.6);
        color: white;
        width: 5.2%;
        height: 100%;
        min-width: 0px;
        margin-top: 1.7%;
    }
    
    .user {
        display: flex;
        justify-content: center;
    }
    
    .login-button {
        margin-top: 20px;
        width: 60%;
        background-color: rgba(0, 0, 0, 0.6);
        padding: 10px;
        color: #ffff33;
        font-weight: 700;
        font-size: 18px;
        border-radius: 20px;
        text-transform: uppercase;
    }
    
    .link-forgot span {
        display: block;
        margin: 0;
        margin-top: 10px;
        margin-left: 12em;
        padding: 0;
        font-weight: 600;
        font-size: 14px;
        color: #fff !important;
    }
    
    .login-register {
        width: 60%;
        background-color: rgba(0, 0, 0, 0.6);
        margin-top: 10px;
        margin-bottom: 50px;
        padding: 10px;
        font-weight: 700;
        font-size: 18px;
        border-radius: 20px;
        text-transform: uppercase;
    }
    
    .login-register a {
        text-decoration: none;
        color: #ffff33;
    }
    
    .login-register a:hover {
        color: #fff;
    }
    
    .login-user button:hover {
        color: #fff;
    }
    
    .login-other {
        padding-top: 16%;
        padding-left: 5%;
        padding-right: 5%;
    }
    
    .login-other .other {
        display: flex;
        margin-top: 25px;
    }
    
    .login-other .other input {
        border: none;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 12px;
        width: 80%;
        outline: none;
        color: #fff;
    }
    
    .login-other label {
        opacity: 0.5;
    }
    
    .other-icon {
        background-color: rgba(0, 0, 0, 0.8);
        padding: 12px;
        color: white;
        width: 7%;
        height: 100%;
        min-width: 0px;
    }
    
    .other-button {
        width: 80%;
        color: rgba(0, 0, 0, 0.6);
        background-color: #FFDD00;
        margin-top: 7%;
        padding: 10px;
        font-weight: 700;
        margin-left: 35px;
        border-radius: 20px;
    }
    
    .other-button span {
        font-family: 'Montserrat' sans-serif;
        font-weight: 18px;
        font-family: 600;
        text-transform: uppercase;
    }
    
    .loading-data {
        position: absolute;
        background: rgba(0, 0, 0, 0.5);
        width: 100%;
        height: 120%;
        top: 0;
        left: 0 !important;
        right: 0;
    }
    
    .closing-data {
        width: 3%;
        height: auto;
        margin-top: 20px;
        margin-left: 20px !important;
        background-color: #fff;
        border-radius: 40px;
        transition: all 0.4s;
    }
    
    .closing-data:hover {
        width: 4%;
        box-shadow: rgba(255, 255, 255, 0.17) 0px -23px 25px 0px inset, rgba(255, 255, 255, 0.15) 0px -36px 30px 0px inset, rgba(255, 255, 255, 0.1) 0px -79px 40px 0px inset, rgba(255, 255, 255, 0.06) 0px 2px 1px, rgba(255, 255, 255, 0.09) 0px 4px 2px, rgba(255, 255, 255, 0.09) 0px 8px 4px, rgba(255, 255, 255, 0.09) 0px 16px 8px, rgba(255, 255, 255, 0.09) 0px 32px 16px;
    }
</style>
