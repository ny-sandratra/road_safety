        <div style="margin-left: 8em;"><a href="{{ path('register') }}">Cr√©er un compte?</a></div>
        {% if error %}

        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <button type="submit" class="btn login-button">Se connecter</button>
    </form>

</div>

{% endblock %}