{% extends 'base.html.twig' %} {% block title %}Platforme!{% endblock %} {% block body %}
<style>

</style>

{% include "home/header.html.twig" %}
<div class=" wrapper registration" id="login">
    <div class="title">
        <img src="{{asset('images/login.png')}}" alt="">
        <h2>se connecter</h2>
    </div>
    <form action="{{ path('login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="" placeholder="adresse email" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" /> {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account" /> #}
        <div style="margin-left: 8em; margin-top:10px; margin-bottom:20px;">
            <span><a href="{{ path('register') }}">Créer un compte?</a></span>
            <span style="margin-left: 5em;"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a></span>
        </div>
        {% if error %}

        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <button type="submit" class="btn login-button">Se connecter</button>
    </form>

</div>{% endblock %}